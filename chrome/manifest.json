{
  "name": "tweets@foursquare",
  "version": "1.1.0",
  "manifest_version": 2,
  "icons" : { "48": "4sq-logo48.png",
             "128": "4sq-logo128.png" },
  "description":
      "Shows tweets at foursquare venues location",
  "homepage_url": "http://minosiants.com",
  "permissions": [        
    "idle",
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {       
       "scripts": ["jquery-1.7.1.min.js","background.js"] 
      },  
  "content_scripts": [{
    "matches": ["https://foursquare.com/v/*"],
    "css": ["jquery.jtweetsanywhere-1.3.1.css","content.css"],
    "js": ["jquery-1.7.1.min.js","jquery.jtweetsanywhere-1.3.1.min.js","content.js"],
    "all_frames": true
  }],
  "content_security_policy": "script-src 'self' https://*.twitter.com ; object-src 'self'"
  
}
